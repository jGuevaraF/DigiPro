@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Materias</h1>

@if (Model.Materias != null)
{
    <div class="table-responsive mb-4">
        <table class="table table-striped table-bordered table-hover" id="alumnoMateriaTabla">
            <thead class="text-center bg-primary text-white">
                <tr class="align-middle">

                    <th>Editar</th>
                    <th class="col">Nombre</th>
                    <th class="col">Costo</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (ML.Materia materia in Model.Materias)
                {
                    <tr class="align-middle">

                        <td><a class="btn btn-outline-secondary m-1" href="@Url.Action("Form", "Materia", new {idMateria = materia.IdMateria})"><i class="fa-solid fa-pen-to-square fa-flip-horizontal fa-lg" style="color: #007bff;"></i></a></td>

                        <td>@materia.Nombre</td>
                        <td>$ @materia.Costo</td>


                        <td>
                            <a class="btn btn-outline-secondary m-1" href="@Url.Action("Delete", "Materia", new {idMateria = materia.IdMateria})"
                               onclick="return confirm('¿Estás seguro de que deseas eliminar esta materia?')">
                                <i class="fa-sharp fa-solid fa-trash fa-lg" style="color: #dc3545;"></i>
                            </a>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <a href="@Url.Action("Form", "Materia")" class="btn btn-success text-center">Agregar Materia</a>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        No hay registros
    </div>
}

<script>
    let table = new DataTable('#alumnoMateriaTabla', {
        reponsive: true,
        "lengthMenu": [[5, 10, 15, 20, -1], [5, 10, 15, 20, "Todos"]],
        searching: false,
        language: {
            url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json",
        },
    });
</script>